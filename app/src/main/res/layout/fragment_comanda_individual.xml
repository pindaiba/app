<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="activity.ComandaIndividualFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaitens"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EDEDED"
        android:layout_gravity="bottom"
        android:minHeight="100dp"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/label_total_comanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total da Compra:   "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valor_total_comanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 250,00"/>

    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_add_white_24dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary"
        fab:fab_colorRipple="@color/primary"
        fab:fab_shadow="true" />

</FrameLayout>
