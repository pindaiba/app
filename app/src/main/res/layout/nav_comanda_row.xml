<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:minHeight="48dp"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icone_lixeira"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/iconeDescricao"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_gravity="left"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:tint="@color/accent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icone_lixeira"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:id="@+id/relativeLayout"
        android:layout_toStartOf="@+id/icone_add">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coca-Cola"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginStart="10dp"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:paddingLeft="3dp"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:id="@+id/textView5"
            android:layout_below="@+id/relativeLayout"
            android:layout_toEndOf="@+id/icone_lixeira"
            android:layout_marginTop="16dp"
            android:textColor="@color/secondary_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,50"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:paddingLeft="4dp"
            android:textColor="@color/secondary_text" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/icone_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/iconeDescricao"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:tint="@color/accent" />

</RelativeLayout>
